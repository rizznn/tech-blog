 <section>
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        Create New Post
      </div>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" class="form-input" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" class="form-input" name="post-url" />
    </div>
    <div>
      <label for="post-contents">Contents</label>
      <input type="text" class="form-input" id="post-contents" name="post-contents" />
    </div>
    
    <button class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
       <ol class="post-list">
        <li>
          {{> post-info post}}
          <div class="col-12">
            <div class="card">
              <div class="card-header">
              <a class="post-title" href="{{post_url}}">{{title}}</a>
              <span class="author"> {{format_date created_at}}</span>
            </div>
            <div class="card-body">
              {{contents}}
            </div>
          </div>
        </li>
    </ol>
  </section>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>

