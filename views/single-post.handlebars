{{!-- posts --}}
{{> post-info post }}

{{!-- form and comments --}}
{{#if loggedIn}}
 <div class="col-12">
  <div class="card">
    <div class="card-header"></div>
    <div class="comment-title">
      Comment
    </div>
      <form class="comment-form">
        <div>
          <textarea class="form-input" name="comment-body"></textarea>
        </div>

        <div>
          <button class="btn" type="submit">add comment</button>
        </div>
      </form>
  </div>
 </div>


{{/if}}

{{> comments post.comments}}

{{!-- to conditionally render the <script> element --}}
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}} 

  
<div>
    {{#each posts}}
    <a href="/dashboard/edit/{{id}}">
        <span>{{title}}</span>
        <span>{{format_date createdAt}}</span>
    </a>
    {{/each}}
</div>