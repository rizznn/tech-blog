<div class="col-12">
    <div class="card">
        <h3 class="card-header">Edit Post</h3>
        <form class="card-body edit-post-form">
          <label class="post-title" for="title">Title</label>
          <input name="post-title" class="form-input" type="text" value="{{post.title}}" />

          <label class="post-contents" for="contents">Content</label>
          <input name="post-contents" class="form-input" type="text" value="{{post.contents}}" />

          <button type="submit" class="btn">Update Post</button>
          <button type="button" class="delete-post-btn btn">Delete Post</button>
        </form>
    </div>
</div>

      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>

 {{!-- post's current comments  --}}
{{> comments post.comments}} 
